#!/bin/bash

. "$(chezmoi source-path)/helpers"

echo ''

{{ if eq .chezmoi.os "darwin" -}}

if ! [ -x "$(command -v fish)" ]; then
    info 'üê† Installing fish shell'
    brew install fish
    success 'fish shell'
else
    skip 'fish shell'
fi

{{ else if eq .chezmoi.os "linux" -}}

if ! [ -x "$(command -v fish)" ]; then
    info 'üê† Installing fish shell'
    sudo apt-add-repository ppa:fish-shell/release-3
    sudo apt-get update && sudo apt-get upgrade
    sudo apt-get install fish
    success 'fish shell'
else
    skip 'fish shell'
fi

{{ end -}}

if ! [ -e "$HOME/.config/fish/functions/fisher.fish" ]; then
    info 'üê† Installing fisher plugin manager'
    fish -c "curl -sL git.io/fisher | source && fisher install jorgebucaran/fisher"
    fish -c "fisher update"
    success 'fisher'
else
    skip 'fisher'
fi

#=============
# change default shell to fish
#=============
if [ "$(basename "$SHELL")" = "fish" ]; then
    info 'Default shell is already fish'
else
    
    if ! grep -q "$(which fish)" /etc/shells; then
        info 'Adding fish to /etc/shells'
        echo "$(which fish)" | sudo tee -a /etc/shells
        success 'fish added to /etc/shells'
    else
        skip 'fish already in /etc/shells'
    fi

    info 'Changing default shell to fish'
    chsh -s $(which fish)
    success 'fish set to default shell'
fi

echo ''
